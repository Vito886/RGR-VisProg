<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RGRVisProg.Views.DBViewerView">

	<UserControl.Styles>
		<StyleInclude Source="/Styles/Style.axaml"/>
	</UserControl.Styles>

	<Grid RowDefinitions="*, 50" ColumnDefinitions="*" >
		<TabControl Grid.Row="0" Grid.Column="0" Items="{Binding Tables}">
			<TabControl.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Name}"/>
						<Button Content="x" Click="DeleteTab" IsEnabled="{Binding IsSubTable}"/>
					</StackPanel>
				</DataTemplate>
			</TabControl.ItemTemplate>
			<TabControl.ContentTemplate>
				<DataTemplate>
					<UserControl Content="{Binding TableView}"/>
				</DataTemplate>
			</TabControl.ContentTemplate>
		</TabControl>
		<Button Classes="btn" Grid.Row="1" Grid.Column="0" Content="Open Query Manager" Command="{Binding $parent[Window].DataContext.OpenQueryManager}"/>
	</Grid>
</UserControl>
